@model  WMS.Entities.Workflow
@{
    ViewBag.Title = "Step 1. New Workflow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-5">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><strong>Step 1. Create a Workflow.</strong></h3>

            </div>
            <div class="panel-body small">
                Instructions here...


            </div>

        </div>


    </div>
    <div class="col-md-7">
        @Html.Partial("ModalTemplates/_Status")

        <div id="transaction">
            @using (Html.BeginForm())
            {
                @Html.Partial("ModalTemplates/_Alert")

                <div class="form-group">
                  

                    <div class="editor-label">
                        <label>
                            Code
                        </label>
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.Code, new { @class = "form-control" })
                        <p id="status" class="small">Verify if Code exists.</p>
                    </div>
                    <div class="editor-label">
                        <label>
                            Name
                        </label>
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        <p class="small">Please indicate workflow name.</p>
                    </div>
                    <div class="editor-label">
                        <label>
                            Description
                        </label>
                    </div>
                    <div class="editor-field">
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                        <p class="small">Please indicate workflow description(optional).</p>
                    </div>
                    @Html.HiddenFor(model => model.Id)
                </div>

                <p class="small">
            Created by:@Html.DisplayFor(model => model.CreatedBy)<br />
            Date Created:@Html.DisplayFor(model => model.DateCreated)
        </p>

        <div class="right">
            <button id="btnSaveChanges" class="btn btn-large btn-success" type="button">
                Save Changes
            </button>

            <button id="btnClose" class="btn btn-large btn-success" type="button" data-dismiss="modal">
                Cancel
            </button>
        </div>
            }
                @Html.Hidden("Home", Url.Action("Index"))
                @Html.Hidden("Manage", Url.Action("Manage"))
                @Html.Hidden("Item", Url.Action("Item"))
                @Html.Hidden("CheckAvailability", Url.Action("CheckAvailability"))

        </div>
    </div>
</div>
