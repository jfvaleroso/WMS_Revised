@model WMS.Web.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Workflow Management System</title>
    @Styles.Render("~/Content/main/css")
    @Styles.Render("~/Content/bootstrap/css")
</head>
<body>

    <div class="container" style="margin-top:10%">
        <div class="container-medium">
            <div class="col-md-6">
                <img src="@Url.Content("~/Content/images/wms-login.jpg")" />
                <div class="page-header">
                    <h4>Workflow Management System</h4>
                </div>
                    <ul class="small">
                        <li>Process, subprocess, classification maintenance</li>
                        <li>Workflow maintenance</li>
                        <li>Status and Notification maintenance</li>
                        <li>Developer Api</li>
                    </ul>
                

            </div>
            <div class="col-md-6">
                <div class="page-header">
                    <h2>Sign in</h2>
                </div>

                @using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @role = "form" }))
                {
                    <div class="form-group">
                        <label for="UserName">Username</label>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "input-block-level form-control", @placeholder = "Your Smart username" })
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        @Html.TextBoxFor(model => model.Password, new { @class = "input-block-level form-control", @placeholder = "Password", @type = "password" })
                    </div>
                    <div class="checkbox">
                        <label class="small">
                        @Html.CheckBoxFor(model => model.RememberMe) Remember me
                        </label>
                    </div>
                    <input type="submit" class="btn btn-lg btn-success" role="button"  value="Sign in"/>
                    
                    @Html.ValidationSummary()
                }


            </div>

           
        </div>
        
    </div>
   


</body>
</html>
