@model WMS.Web.Areas.Setting.Models.ExternalModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modify</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.SystemCode)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.SystemCode, new { @class = "form-control" })
                <p class="small">Please specify system Code</p>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                <p class="small">Please specify name</p>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                <p class="small">Please specify description</p>
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.URL)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.URL, new { @class = "form-control" })
                <p class="small">Please specify URL</p>
            </div>

         
        </div>
    }
    <div class="right">
        <button id="btnSaveChanges" class="btn btn-large btn-success" type="button">
            Save Changes
        </button>
        <button id="btnClose" class="btn btn-large btn-success" type="button" data-dismiss="modal">
            Cancel
        </button>
    </div>
    @Html.Hidden("Home", Url.Action("Index"))
    @Html.Hidden("Manage", Url.Action("Modify"))
    @Html.ValidationSummary()

    @Scripts.Render("~/bundles/global/main")
</body>
</html>

