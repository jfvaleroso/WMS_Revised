@model WMS.Entities.Classification

@{
    ViewBag.Title = "Classification Maintenance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(function () {
        $('#DataTable').jtable({
            title: '',
            paging: true,
            pageSize: 17,
            sorting: false,
            gotoPageArea: 'none',
            pageSizeChangeArea: false,
            columnSelectable: false,
            actions: {
                listAction: '@Url.Action("DataListWithPaging")'
            },
            fields: {
                Id: {
                    key: true,
                    list: false
                },
                View: {
                    title: '',
                    width: '1.3%',
                    display: function (data) {
                       function getRequest(url, title) {
                            $.ajax({
                                url: url,
                                context: document.body,
                                cache: false,
                                success: function (data) {
                                    $("#transaction").removeClass("hide");
                                    $('#mainModal .modal-body').html(data);
                                    $(this).addClass("done");
                                    $('#mainModal .modal-header .modal-title').empty().append(title);
                                    $('#mainModal').modal('show');
                                    $(".combobox").select2({
                                        placeholder: "Select one",
                                        allowClear: true
                                    });
                                  
                                   
                                    
                                },
                                error: function (err) {
                                    alert(err);
                                }
                            });
                        }

                        var $img = $('<a data-toggle="tooltip" title="Click to manage." class="glyphicon glyphicon-th-list pointer" ' + '></a>');
                        $img.click(function (event) {
                            event.preventDefault();
                            var url = '@Url.Action("Manage")' + '/' + data.record.SecuredId;
                            getRequest(url, $("#EditTitle").val());
                            return false;
                        });
                        return $img;
                    }
                },
                ClassificationCode: {
                    width: '5%',
                    title: 'Code'
                },
                ClassificationName: {
                    title: 'Name'

                },
                Description: {
                    title: 'Description'
                },
                Active: {
                    title: '',
                    width: '1.3%',
                    display: function (data) {
                        var $img;
                        if (data.record.Active) {
                            $img = '<img class="center" data-toggle="tooltip" title="active" src="@Url.Content("~/Content/images/active.png")" />';
                        }
                        else {
                            $img = '<img class="center" data-toggle="tooltip" title="inactive" src="@Url.Content("~/Content/images/inactive.png")" />';
                        }
                        return $img;
                    }
                },
                Delete: {
                    title: '',
                    width: '1.1%',
                    display: function (data) {
                        var $img = $('<a data-toggle="tooltip" title="remove this item" class="glyphicon glyphicon-trash pointer" ' + '></a>');
                        $img.on('click', function (event) {
                            event.preventDefault();
                            $('#modalConfirmation #item').empty().append(data.record.ClassificationName);
                            $('#modalConfirmation').modal('show');
                            $('#Id').val(data.record.Id);
                            $('#Item').val(data.record.ClassificationName);
                            return false;
                        });
                        return $img;
                    }
                }
            },

            toolbar: {
                items: [

                ]
            }

        });


        //Load all records when page is first shown
        $('#DataTable').jtable('load');

    });

</script>
@using (Html.BeginForm())
{    
     @Html.Partial("ModalTemplates/_Confirmation")
    @Html.Partial("ModalTemplates/_Status")
    
    <div class="row">
        <div class="col-lg-6">
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-success" type="button" id="btnNew">
                        + Create new</button>
                </span>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search here..." autocomplete="off"
                    name="searchString" id="searchString">
                <span class="input-group-btn">
                    <button class="btn btn-success" type="submit" id="btnSearch">
                        Search</button>
                </span>
            </div>
        </div>
    </div>
}
<div class="table-wrapper small">
    <div id="DataTable">
    </div>
</div>
@Html.Hidden("Id")
@Html.Hidden("Item")
@Html.Hidden("New", Url.Action("New"))
@Html.Hidden("Manage", Url.Action("Manage"))
@Html.Hidden("Delete", Url.Action("Delete"))
@Html.Hidden("NewTitle", "New Classification")
@Html.Hidden("EditTitle", "Modify Classification")

